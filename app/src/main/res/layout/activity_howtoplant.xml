<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".howtoplantActivity">

    <TextView
        android:id="@+id/howpage"
        android:layout_width="375dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:text="วิธีการปลูกและดูแลพืชไม้ผล"
        android:textColor="#040202"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="395dp"
        android:layout_height="600dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/howpage">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/coconut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="มะพร้าว\nวิธีการปลูก" />

            <TextView
                android:id="@+id/mango"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="มะม่วง" />

            <TextView
                android:id="@+id/lychee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ลิ้นจี่" />

            <TextView
                android:id="@+id/durian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ทุเรียน" />

            <TextView
                android:id="@+id/grape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="องุ่น" />

            <TextView
                android:id="@+id/rambutan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="เงาะ" />

            <TextView
                android:id="@+id/longan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ลำไย" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/gohome"
        android:layout_width="396dp"
        android:layout_height="52dp"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:background="#8BC34A"
        android:text="กลับหน้าหลัก"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />
</androidx.constraintlayout.widget.ConstraintLayout>